@model EditRoleVM

<h1> Edit Role</h1>
<form asp-action="EditRole" asp-controller="Administration" method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" readonly class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input class="form-control" asp-for="RoleName" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-primary">Update</button>
   
        <br />
        <a asp-action="GetRolesList" class="btn btn-danger">Cancel</a>
    </div>
    <div class="card">
        <div class="card-header">
            Users in this Role
        </div>

        @if (Model.UsersList.Any())
        {
    <div class="card-body">
        @foreach (var user in Model.UsersList)
        {

        <h5 class="card-body">@user</h5>


        }
    </div>
        }
        else
        {
        <div class="card-body">
            <h5 class="card-body">No user</h5>
        </div>

        }
    <div class="card-footer">
        <a asp-controller="Administration" asp-route-roleId="@Model.Id" asp-action="AddOrRemoveUsersInRole" class="btn btn-primary">Add or Remove Users</a>
        The roleid for this user is  @Model.Id

    </div>

    </div>
</form>
