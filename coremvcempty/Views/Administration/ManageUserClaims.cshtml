@model ManageUserClaimsVM

<h1>Manage Claims for this user</h1>

<form method="post" asp-action="ManageUserClaims">

    <input type="hidden" asp-for="@Model.UserId" />

    @for (int i = 0; i < Model.Claims.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model.Claims[i].IsSelected">
            <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                @Model.Claims[i].ClaimType
            </label>
        </div>
    }
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <br />
        <a asp-action="EditUser" class="btn btn-danger" asp-route-Id="@Model.UserId" >Cancel</a>
    </div>





</form>    