@model List<ManageUserRolesVM>

<h1>Manage Roles for this user</h1>

<form  method="post" asp-action="ManageUserRoles">



    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].RoleId" />
        <input type="hidden" asp-for="@Model[i].RoleName" />
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model[i].isSelected">
            <label class="form-check-label" asp-for="@Model[i].isSelected">
                @Model[i].RoleName
            </label>
        </div>
    }
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <br />
        <a asp-action="EditUser" class="btn btn-danger">Cancel</a>
    </div>





</form>    