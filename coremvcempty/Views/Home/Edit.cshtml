@model EditViewModel
@{
    string staticpath = "~/Images/employee.png";
    string photopath = "~/Images/" + Model.ExistingPhotoName;
    string path = Model.ExistingPhotoName != null ? photopath : staticpath;
}
<form enctype="multipart/form-data" asp-action="edit" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control">
            <option value="">Please select</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Photo">Choose another Photo</label>
        <input class="form-control custom-file-input" asp-for="Photo" />
    </div>
    <div><img src="@path" class="card-img-top image" asp-append-version="true" /></div>
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-primary">Update</button>

        <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
    </div>
<input hidden asp-for="ExistingPhotoName" />
</form>
